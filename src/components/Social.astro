---
// components imports
import {Icon} from "astro-icon/components";

// config import
import {SOCIALS} from '@/config';

---

<div class={'flex gap-2 md:gap-4'}>
  {
    SOCIALS.map((networkS) => (
      networkS.show && (
        <a
          class={`${networkS.name} social rounded-md duration-100`}
          href={networkS.url}
          target="_blank"
          aria-label={networkS.name + "-link"}
        >
          <Icon name={networkS.icon}/>
        </a>
      )
    ))
  }
</div>

<style>
  .social {
    color: var(--c-gray-600);
    font-size: var(--scale-600);

    &:hover {
      color: var(--c-gray-800);
    }
  }
</style>

