---
// astro imports
import {Image} from "astro:assets";
import Link from "./Link.astro";

const { title, tags, cover, id } = Astro.props;
---
<Link href={`/projects/${id}`}>
  <div class="relative flex flex-col text-gray-700 bg-clip-border rounded-xl w-full">
    <div class="relative overflow-hidden rounded-xl">
      <Image
        transition:name={ `${id}-image` }
        src={cover}
        widths={[400, 800, 1200]}
        height={140}
        sizes="(max-width: 640px) 100vw, 33vw"
        alt={"cover preview of " + title}
        class={"object-cover object-top w-full h-full rounded-xl"}
        loading={'eager'}
      />
    </div>

    <div class="px-2 py-4 flex flex-col gap-2">
      <p class="text-sm  text-n500 dark:text-light-theme ">
        {tags.join(', ')}
      </p>

      <div class="flex items-center justify-between mb-2">
        <h4 class="font-semibold text-xl text-n500 dark:text-white ">
          {title}
        </h4>
      </div>
    </div>
  </div>
</Link>
