
<div class="card card-tabs">
  <ul
    class="nav"
    id="{{ id }}"
    role="tablist"
  >
    {% for item in items %}
      <li class="nav-item"
        role="presentation"
      >
        <a
          href="#"
          class="nav-link{{ loop.first ? ' active' }}"
          id="pills-home-tab"
          data-bs-toggle="pill"
          data-bs-target="#{{ id ~ '--' ~ loop.index }}"
          type="button"
          role="tab"
          aria-controls="{{ id ~ '--' ~ loop.index }}"
          aria-selected="{{ loop.first ? 'true' : 'false' }}"
        >
          {{- item.name -}}
        </a>
      </li>
    {% endfor %}
  </ul>

  <div class="tab-content" id="{{ id }}-tabContent">
    {% for item in items %}
      <div
        id="{{ id ~ '--' ~ loop.index }}"
        class="tab-pane fade{{ loop.first ? ' show active' }}{{ item.classes }}"
        role="tabpanel"
        aria-labelledby="pills-home-tab"
      >
        {{- item.value -}}
      </div>
    {% endfor %}
  </div>
</div>
