---
import LayoutDefoult from "../layouts/default.astro";
---

<LayoutDefoult>
  <div class="container">
    <div class="block block--home row align-items-center">
      <div class="field-image col-lg-4 col-xxl-3 mb-4 mb-md-5 mb-lg-0">
        <div
          class="animation-avatar mx-auto"
          style="background-image: url('./img/personal.jpg')"
          class="img-fluid"
        >
        </div>
      </div>

      <div class="block-content text-center text-lg-start col-lg-8 col-xxl-9">
        <div class="padding-left">
          <h1 class="text-uppercase mb-4">Ion Obreja</h1>
          <div class="lead mb-3">
            I'm Front-end Acquia certifications Drupal Developer located in
            Chisinau, Moldova.
          </div>
        </div>
      </div>
    </div>
  </div>
</LayoutDefoult>
